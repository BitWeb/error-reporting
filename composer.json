{
    "name": "bitweb/error-reporting",
    "description": "BitWeb extension for sending errors to email.",
    "license": "BSD-3-Clause",
    "homepage": "http://bitweb.ee/",
    "authors": [
        {
            "name": "Priit Rand",
            "email": "priit@bitweb.ee"
        },
        {
            "name": "Erich Jagom√§gis",
            "email": "erich@bitweb.ee"
        },
        {
            "name": "Rain Ramm",
            "email": "rain@bitweb.ee"
        }
    ],
    "require": {
        "bitweb/stdlib": "~1.0",
        "zendframework/zend-view": "~2.2",
        "zendframework/zend-servicemanager": "~2.2",
        "zendframework/zend-filter": "~2.2",
        "zendframework/zend-i18n": "~2.2"
    },
    "require-dev": {
        "phpunit/PHPUnit": "3.7.*",
        "satooshi/php-coveralls": "dev-master",
        "sebastianbergmann/phpcov": "1.1.0"
    },
    "autoload": {
        "psr-0": {
            "": ["src/", "test/"]
        }
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "sebastianbergmann/phpcov",
                "version": "1.1.0",
                "dist": {
                    "url": "https://github.com/sebastianbergmann/phpcov/archive/1.1.0.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "https://github.com/sebastianbergmann/phpcov.git",
                    "type": "git",
                    "reference": "1.1.0"
                },
                "bin": [
                    "phpcov.php"
                ]
            }
        }
    ]
}
